<%= form_for(@app) do |f| %>
  <% if @app.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h2>

      <ul>
      <% @app.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="app-submit-form">
  <div class="field">
    <%= f.label :name, "Name:" %><br />
    <%= f.text_field :name, class: 'input-block-level' %>
  </div>
  <div class="field">
    <%= f.label :url, "URL:" %><br />
    <%= f.text_field :url, class: 'input-block-level' %>
  </div>
  <div class="field">
    <%= f.label :email, "Email:" %><br />
    <%= f.text_field :email, class: 'input-block-level' %>
  </div>
  <div class="field">
    <%= f.label :codebase_url, "Codebase URL:" %><br />
    <%= f.text_field :codebase_url, class: 'input-block-level' %>
  </div>
  <div class="field">
    <%= f.label :description, "Description:" %><br />
    <%= f.text_area :description, class: 'input-block-level' %>
  </div>
  <div class="actions">
    <%= f.submit "Submit App", class: "btn btn-large" %>
  </div>
</div>
<% end %>
