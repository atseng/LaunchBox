<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.text %></td>
    <td><%= comment.first_name %></td>
    <td><%= comment.last_name %></td>
    <td><%= comment.email %></td>
    <td><%= link_to 'Show', app_comment_path(@app, comment) %></td>
    <td><%= link_to 'Edit', edit_app_comment_path(@app, comment) %></td>
    <td><%= link_to 'Destroy', [@app, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>