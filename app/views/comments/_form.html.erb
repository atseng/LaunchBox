      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<h3>Submit a comment</h3>

<div class="comment-submit-form">
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, class: 'input-block-level' %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, class: 'input-block-level'  %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, class: 'input-block-level'  %>
    </div>
    <div class="field">
      <%= f.label :text, 'Comment' %><br />
      <%= f.text_area :text, class: 'input-block-level'  %>
    </div>

    <div class="actions">
      <%= f.submit 'Submit Comment', class: "btn" %>
    </div>
    <% end %>
</div>